            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-area mr-1"></i>
                        Area Chart Example
                    </div>
                    <div class="card-body"><canvas id="myAreaChart" height="40"></canvas></div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-bar mr-1"></i>
                        Bar Chart Example
                    </div>
                    <div class="card-body"><canvas id="myBarChart" height="40"></canvas></div>
                </div>
            </div>
        </div>*@
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1" style="color: red"></i>
                <b><label style="color:red">Toner Çıkışı Yapılan Birimler</label></b>
                <a class="btn btn-primary" href="@Url.Action("Liste","Toner")">TONER ÇIKIŞ</a>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="background: darkred; color: white">
                                <th>Sicili</th>
                                <th>Birimi</th>
                                <th>Yazıcı Marka</th>
                                <th>Yazıcı Model</th>
                                <th>Veriliş Tarihi</th>
                                <th>Takan Personel</th>
                                <th>Yazıcı Son Sayacı</th>
                            </tr>
                        </thead>
                        @*<tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Office</th>
                                    <th>Age</th>
                                    <th>Start date</th>
                                    <th>Salary</th>
                                </tr>
                            </tfoot>*@
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.Yazicilar.Personeller.ADSOYAD</td>
                                    <td>@item.Birimler.BIRIMAD</td>
                                    <td>@item.YaziciMarkalari.YAZICIMARKA</td>
                                    <td>@item.YaziciModelleri.YAZICIMODEL</td>
                                    <td>@Convert.ToDateTime(item.TAKMATARIHI).ToString("d")</td>
                                    <td>@item.Kullanicilar.ADISOYADI</td>
                                    <td>@item.YAZICISAYAC</td>
                                    
                                </tr>
                            </tbody>

                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</main>


