@using BilgiIslemEnvanter.Models.Entity
@model List<Yazicilar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/Yazici/Ekle/" class="btn btn-primary">Yazıcı Ekle</a>
<br />

<h2 style="color:red; text-align:center">Burdur Adliyesine ait Yazıcı Listesi</h2>


<table id="veri" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr style="background: crimson; color: bisque">

            <td>
                ID
            </td>

            <td>
                MARKA
            </td>
            <td>
                MODEL
            </td>
            <td>
                SERİ NO
            </td>
            <td>
                İŞLEM
            </td>

        </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YaziciMarkalari.YAZICIMARKA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YaziciModelleri.YAZICIMODEL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERINO)
                </td>
                <td>
                    <a href="/Yazici/Sil/@item.ID"><img border="0" alt="sil" src="~/resim/sil.png" width="20" height="20" /></a>
                    <a href="/Yazici/Getir/@item.ID"><img border="0" alt="sil" src="~/resim/update.png" width="20" height="20" /></a>
                </td>

            </tr>
        }
    </tbody>
</table>



