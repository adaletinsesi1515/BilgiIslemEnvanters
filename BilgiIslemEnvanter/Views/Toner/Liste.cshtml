@model IEnumerable<BilgiIslemEnvanter.Models.Entity.Yazicilar>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:red; text-align:center">Zimmetli (Birimlerde bulunan) Yazıcı Listesi</h2>


<table id="veri" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr style="background: crimson; color: bisque">

            <td>
                MARKA
            </td>
            <td>
                MODEL
            </td>
            <td>
                SERİ NO
            </td>
            <td>
                PERSONEL
            </td>
            <td>
                BİRİMİ
            </td>
            <td>
                İŞLEM
            </td>

        </tr>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YaziciMarkalari.YAZICIMARKA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YaziciModelleri.YAZICIMODEL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SERINO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personeller.ADSOYAD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birimler.BIRIMAD)
            </td>
            <td>
                <a href="~/Toner/TonerCikis/@item.ID" class="btn btn-danger">TONER VER</a>
            </td>

        </tr>
        }
    </tbody>
</table>
